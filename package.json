{
  "name": "bookipi-flash-sale",
  "version": "1.0.0",
  "description": "High-throughput flash sale system with MERN stack (MongoDB, Express, React, Node.js) and Redis",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "predev": "lsof -ti:5000,3000,3001 2>/dev/null | xargs kill -9 2>/dev/null || true && rm -rf client/.next/dev/lock 2>/dev/null || true",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "npm run dev",
    "install": "npm install && cd server && npm install && cd ../client && npm install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.37.5",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
